<div class="min-h-screen bg-gray-50">
  <%= render "layouts/minimal_header", page_title: "Email Archive", container_class: "max-w-6xl" %>

  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-8">
      
      <div class="flex items-center space-x-4">
        <%= button_to import_emails_path, method: :post, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
          Import Emails
        <% end %>
        
        <%= link_to root_path, class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-4.906-1.456l-3.547 1.456L6.05 16.416C4.779 14.989 4 13.094 4 11c0-4.418 3.582-8 8-8s8 3.582 8 8z"></path>
          </svg>
          Back to Chat
        <% end %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold text-gray-900">Recent Emails</h2>
          <span class="text-sm text-gray-500"><%= @emails.count %> emails</span>
        </div>
      </div>

      <% if @emails.any? %>
        <div class="divide-y divide-gray-200">
          <% @emails.each do |email| %>
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <%= link_to email_path(email), class: "block" do %>
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center space-x-3 mb-2">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= email.from_name %>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= email.from_email %>
                      </p>
                    </div>
                    
                    <h3 class="text-base font-medium text-gray-900 mb-1 line-clamp-1">
                      <%= email.subject.presence || "(No Subject)" %>
                    </h3>
                    
                    <p class="text-sm text-gray-600 line-clamp-2">
                      <%= truncate(strip_tags(email.body), length: 150) %>
                    </p>
                    
                    <% if email.labels_array.any? %>
                      <div class="flex items-center space-x-2 mt-2">
                        <% email.labels_array.first(3).each do |label| %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            <%= label %>
                          </span>
                        <% end %>
                        <% if email.labels_array.count > 3 %>
                          <span class="text-xs text-gray-500">+<%= email.labels_array.count - 3 %> more</span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                  
                  <div class="ml-4 flex-shrink-0 text-right">
                    <p class="text-sm text-gray-500">
                      <%= time_ago_in_words(email.received_at) %> ago
                    </p>
                    <p class="text-xs text-gray-400 mt-1">
                      <%= email.received_at.strftime("%b %d, %Y") %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No emails imported yet</h3>
          <p class="mt-2 text-sm text-gray-500">
            Click "Import Emails" to sync your Gmail messages.
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>