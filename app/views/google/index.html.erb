<div class="min-h-screen bg-gray-50">
  <%= render "layouts/minimal_header", page_title: "Google Integration", container_class: "max-w-6xl" %>

  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Breadcrumb Navigation -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to root_path, class: "text-gray-500 hover:text-gray-700" do %>
            <%= inline_svg "icons/home.svg", class: "w-4 h-4" %>
          <% end %>
        </li>
        <%= inline_svg "icons/chevron-right.svg", class: "w-4 h-4 text-gray-400" %>
        <li>
          <span class="text-gray-900 font-medium">Google Integration</span>
        </li>
      </ol>
    </nav>
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Google Account Integration</h2>
      <p class="mt-1 text-sm text-gray-600">Connect your Google account to enable AI-powered insights from your emails and calendar.</p>
    </div>
    
    <div class="px-6 py-4">
      <% if @google_identity %>
        <!-- Connected State -->
        <div class="rounded-md bg-green-50 p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <%= inline_svg "icons/check.svg", class: "w-5 h-5 text-green-400" %>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">
                Google Account Connected
              </h3>
              <div class="mt-2 text-sm text-green-700">
                <p>Your Google account is successfully connected with email and calendar access.</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Data Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <%= inline_svg "icons/email.svg", class: "w-8 h-8 text-blue-600" %>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">Emails</h3>
                  <p class="text-2xl font-bold text-blue-600"><%= @emails_count %></p>
                </div>
              </div>
              
              <% if @emails_count > 0 %>
                <%= link_to emails_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" do %>
                  View all →
                <% end %>
              <% end %>
            </div>
          </div>
          
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <%= inline_svg "icons/calendar.svg", class: "w-8 h-8 text-green-600" %>
                </div>
                <div class="ml-4">
                  <h3 class="text-lg font-medium text-gray-900">Calendar Events</h3>
                  <p class="text-2xl font-bold text-green-600"><%= @calendar_events_count %></p>
                </div>
              </div>
              
              <% if @calendar_events_count > 0 %>
                <%= link_to calendar_events_path, class: "text-sm text-green-600 hover:text-green-800 font-medium" do %>
                  View all →
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Sync Status -->
        <div class="mt-6 bg-gray-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Auto-Sync Status</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Emails:</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @sync_status[:emails] == 'Up to date' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @sync_status[:emails] %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600">Calendar:</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @sync_status[:calendar] == 'Up to date' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @sync_status[:calendar] %>
              </span>
            </div>
          </div>
          <% if @last_email_sync || @last_calendar_sync %>
            <div class="text-xs text-gray-500">
              <% if @last_email_sync %>
                Last email sync: <%= time_ago_in_words(@last_email_sync) %> ago<br>
              <% end %>
              <% if @last_calendar_sync %>
                Last calendar sync: <%= time_ago_in_words(@last_calendar_sync) %> ago
              <% end %>
            </div>
          <% end %>
        </div>
        
        <!-- Actions -->
        <div class="space-y-4">
          <div class="flex flex-wrap gap-4">
            <%= button_to import_google_emails_path, method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <%= inline_svg "icons/download.svg", class: "w-4 h-4 mr-2" %>
              Import Emails (Manual)
            <% end %>
            
            <%= button_to import_google_calendar_path, method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
              <%= inline_svg "icons/download.svg", class: "w-4 h-4 mr-2" %>
              Import Calendar (Manual)
            <% end %>
          </div>
          
          <div class="border-t border-gray-200 pt-4">
            <%= button_to disconnect_google_path, method: :delete, 
                data: { confirm: "Are you sure? This will disconnect your Google account and delete all imported emails and calendar events." },
                class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
              <%= inline_svg "icons/close.svg", class: "w-4 h-4 mr-2" %>
              Disconnect Google
            <% end %>
          </div>
        </div>
        
      <% else %>
        <!-- Not Connected State -->
        <div class="text-center py-8">
          <%= inline_svg "icons/check.svg", class: "w-8 h-8 mx-auto text-gray-400" %>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No Google account connected</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by connecting your Google account for email and calendar access.</p>
          <div class="mt-6">
            <%= button_to "/auth/google_oauth2?origin=#{google_path}", method: :post, data: { turbo: false }, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <%= inline_svg "icons/google.svg", class: "w-4 h-4 mr-2" %>
              Connect to Google
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>