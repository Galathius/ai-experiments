<div class="h-screen bg-gray-50" data-controller="chat">
  <!-- Mobile Header (visible on small screens only) -->
  <div class="md:hidden bg-white border-b border-gray-200">
    <div class="p-4">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-xl font-semibold text-gray-900">Ask Anything</h1>
        <button type="button" class="text-gray-400 hover:text-gray-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile Tabs -->
      <div class="flex space-x-6 border-b border-gray-200">
        <button id="mobile-chat-tab" class="pb-2 border-b-2 border-blue-500 text-blue-600 font-medium">Chat</button>
        <button id="mobile-history-tab" class="pb-2 text-gray-500 hover:text-gray-700">History</button>
      </div>
    </div>
  </div>

  <div class="chat-container">
    <style>
      @media (max-width: 767px) {
        .chat-container {
          height: calc(100vh - 120px);
        }
      }
      @media (min-width: 768px) {
        .chat-container {
          height: 100vh;
          display: flex;
        }
      }
    </style>
    
    <!-- Desktop Layout (md and up) -->
    <div class="hidden md:flex w-full h-full">
      <!-- Desktop Sidebar -->
      <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
        <!-- Desktop Header -->
        <div class="p-4 border-b border-gray-200">
          <div class="flex items-center justify-between mb-4">
            <h1 class="text-xl font-semibold text-gray-900">Ask Anything</h1>
            <button type="button" class="text-gray-400 hover:text-gray-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          
          <!-- New Thread Button (Desktop only) -->
          <button id="new-thread-btn" class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            New thread
          </button>
        </div>
        
        <!-- Desktop Chat History -->
        <div class="flex-1 overflow-y-auto p-4">
          <% @chats.each do |chat| %>
            <div class="chat-item p-3 rounded-lg hover:bg-gray-50 cursor-pointer mb-2 <%= 'bg-blue-50 border border-blue-200' if chat == @current_chat %>" data-chat-id="<%= chat.id %>">
              <div class="text-sm font-medium text-gray-900 truncate"><%= chat.title %></div>
              <div class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(chat.updated_at) %> ago</div>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Desktop Main Chat Area -->
      <div id="desktop-chat-panel" class="flex-1 flex flex-col">
        <!-- Context Bar -->
        <div class="p-4 border-b border-gray-200 bg-white">
          <div class="text-center">
            <div class="text-sm text-gray-500">Context set to all meetings</div>
            <div class="text-xs text-gray-400"><%= Time.current.strftime("%l:%M%P - %B %d, %Y") %></div>
          </div>
        </div>
        
        <!-- Messages Area -->
        <div class="flex-1 overflow-y-auto p-6 space-y-4 messages-container">
          <!-- Initial AI Message -->
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <div class="bg-gray-100 rounded-lg p-4">
                <p class="text-gray-900">I can answer questions about any Jump meeting. What do you want to know?</p>
              </div>
            </div>
          </div>
          
          <!-- Dynamic messages will be inserted here -->
          <% if @current_chat&.messages&.any? %>
            <% @current_chat.messages.ordered.each do |message| %>
              <div class="flex items-start space-x-3 <%= 'flex-row-reverse space-x-reverse' if message.role == 'user' %>">
                <div class="flex-shrink-0">
                  <% if message.role == 'user' %>
                    <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="flex-1">
                  <div class="<%= message.role == 'user' ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-900' %> rounded-lg p-4">
                    <p><%= simple_format(message.content) %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        
        <!-- Input Area -->
        <div class="p-6 border-t border-gray-200 bg-white">
          <form id="chat-form" class="space-y-4">
            <div class="relative">
              <textarea 
                id="message-input" 
                name="content"
                placeholder="Ask anything about your meetings..."
                class="w-full p-4 pr-20 border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                rows="3"
              ></textarea>
              <div class="absolute bottom-4 right-4 flex items-center space-x-2">
                <button type="button" class="text-gray-400 hover:text-gray-600">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
                  </svg>
                </button>
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white p-2 rounded-lg transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                </button>
              </div>
            </div>
            
            <!-- Controls -->
            <div class="flex items-center justify-between text-sm">
              <div class="flex items-center space-x-4">
                <button type="button" class="flex items-center text-gray-500 hover:text-gray-700">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  Add
                </button>
                <div class="flex items-center text-gray-500">
                  <span>All meetings</span>
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </div>
              
              <div class="flex items-center space-x-2">
                <button type="button" class="p-2 text-gray-400 hover:text-gray-600 rounded-full">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
                  </svg>
                </button>
                <button type="button" class="p-2 text-gray-400 hover:text-gray-600 rounded-full">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="12" fill="#1f2937"/>
                    <path fill="white" d="M12 6v6l4 2"/>
                  </svg>
                </button>
                <button type="button" class="p-2 text-gray-400 hover:text-gray-600 rounded-full">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
                  </svg>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Mobile Layout (sm and below) -->
    <div class="md:hidden w-full h-full">
      <!-- Mobile History Panel (hidden by default, shown when History tab active) -->
      <div id="mobile-history-panel" class="hidden w-full h-full bg-white overflow-y-auto">
        <div class="p-4">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Chat History</h2>
            <button id="mobile-new-thread-btn" class="flex items-center gap-2 px-3 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded-lg text-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              New
            </button>
          </div>
          
          <div class="space-y-2">
            <% @chats.each do |chat| %>
              <div class="mobile-chat-item p-3 rounded-lg hover:bg-gray-50 cursor-pointer border" data-chat-id="<%= chat.id %>">
                <div class="text-sm font-medium text-gray-900 truncate"><%= chat.title %></div>
                <div class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(chat.updated_at) %> ago</div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Mobile Main Chat Area -->
      <div id="chat-panel" class="w-full h-full flex flex-col">
        <!-- Context Bar -->
        <div class="p-4 border-b border-gray-200 bg-white">
          <div class="text-center">
            <div class="text-sm text-gray-500">Context set to all meetings</div>
            <div class="text-xs text-gray-400"><%= Time.current.strftime("%l:%M%P - %B %d, %Y") %></div>
          </div>
        </div>
        
        <!-- Messages Area -->
        <div class="flex-1 overflow-y-auto p-4 space-y-4 messages-container">
          <!-- Initial AI Message -->
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <div class="bg-gray-100 rounded-lg p-4">
                <p class="text-gray-900">I can answer questions about any Jump meeting. What do you want to know?</p>
              </div>
            </div>
          </div>
          
          <!-- Dynamic messages will be inserted here -->
          <% if @current_chat&.messages&.any? %>
            <% @current_chat.messages.ordered.each do |message| %>
              <div class="flex items-start space-x-3 <%= 'flex-row-reverse space-x-reverse' if message.role == 'user' %>">
                <div class="flex-shrink-0">
                  <% if message.role == 'user' %>
                    <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="flex-1">
                  <div class="<%= message.role == 'user' ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-900' %> rounded-lg p-4">
                    <p><%= simple_format(message.content) %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        
        <!-- Mobile Input Area -->
        <div class="p-4 border-t border-gray-200 bg-white">
          <form id="mobile-chat-form" class="space-y-3">
            <div class="relative">
              <textarea 
                id="mobile-message-input" 
                name="content"
                placeholder="Ask anything about your meetings..."
                class="w-full p-3 pr-16 border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                rows="2"
              ></textarea>
              <div class="absolute bottom-3 right-3">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white p-1.5 rounded-lg transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<input type="hidden" id="current-chat-id" value="<%= @current_chat&.id %>">