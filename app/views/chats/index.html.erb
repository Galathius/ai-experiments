<div class="h-screen bg-gray-50" data-controller="chat">
  <!-- Mobile Header (visible on small screens only) -->
  <div class="md:hidden bg-white border-b border-gray-200">
    <div class="p-4">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-xl font-semibold text-gray-900">Ask Anything</h1>
        <button type="button" class="text-gray-400 hover:text-gray-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <!-- Mobile Tabs -->
      <div class="flex space-x-6 border-b border-gray-200">
        <button id="mobile-chat-tab" class="pb-2 border-b-2 border-blue-500 text-blue-600 font-medium">Chat</button>
        <button id="mobile-history-tab" class="pb-2 text-gray-500 hover:text-gray-700">History</button>
      </div>
    </div>
  </div>

  <div class="chat-container">
    <style>
      @media (max-width: 767px) {
        .chat-container {
          height: calc(100vh - 120px);
        }
      }
      @media (min-width: 768px) {
        .chat-container {
          height: 100vh;
          display: flex;
        }
      }
    </style>
    
    <!-- Desktop Layout (md and up) -->
    <div class="hidden md:flex w-full h-full">
      <!-- Desktop Sidebar -->
      <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
        <!-- Desktop Header -->
        <div class="p-4 border-b border-gray-200">
          <div class="flex items-center justify-between mb-4">
            <h1 class="text-xl font-semibold text-gray-900">Ask Anything</h1>
          </div>
          
          <!-- New Thread Button (Desktop only) -->
          <button id="new-thread-btn" class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg transition-colors mb-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            New thread
          </button>
          
          <!-- Google Integration Link -->
          <%= link_to google_path, class: "w-full flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors mb-2" do %>
            <svg class="w-4 h-4" viewBox="0 0 24 24">
              <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Google Account
          <% end %>
          
          <!-- HubSpot Management Link -->
          <%= link_to hubspot_path, class: "w-full flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            HubSpot CRM
          <% end %>
        </div>
        
        <!-- Desktop Chat History -->
        <div class="flex-1 overflow-y-auto p-4">
          <% @chats.each do |chat| %>
            <div class="chat-item p-3 rounded-lg hover:bg-gray-50 cursor-pointer mb-2 <%= 'bg-blue-50 border border-blue-200' if chat == @current_chat %>" data-chat-id="<%= chat.id %>">
              <div class="text-sm font-medium text-gray-900 truncate"><%= chat.title %></div>
              <div class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(chat.updated_at) %> ago</div>
            </div>
          <% end %>
        </div>
        
        <!-- User Info & Sign Out -->
        <div class="border-t border-gray-200 p-4 bg-gray-50">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                <span class="text-white text-sm font-medium">
                  <%= Current.user.first_name&.first&.upcase || Current.user.email_address&.first&.upcase %>
                </span>
              </div>
              <div class="min-w-0 flex-1">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= [Current.user.first_name, Current.user.last_name].compact.join(' ').presence || 'User' %>
                </p>
                <p class="text-xs text-gray-500 truncate">
                  <%= Current.user.email_address %>
                </p>
              </div>
            </div>
            <%= button_to session_path, method: :delete, class: "inline-flex items-center px-2 py-1 text-xs text-gray-600 hover:text-gray-900 transition-colors cursor-pointer", title: "Sign out" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Desktop Main Chat Area -->
      <div id="desktop-chat-panel" class="flex-1 flex flex-col">
        <!-- Context Bar -->
        <div class="p-4 border-b border-gray-200 bg-white">
          <div class="text-center">
            <div class="text-sm text-gray-500">Context set to all meetings</div>
            <div class="text-xs text-gray-400"><%= Time.current.strftime("%l:%M%P - %B %d, %Y") %></div>
          </div>
        </div>
        
        <!-- Messages Area -->
        <div class="flex-1 overflow-y-auto p-6 space-y-4 messages-container">
          <!-- Initial AI Message -->
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <div class="bg-gray-100 rounded-lg p-4">
                <p class="text-gray-900">I can answer questions about any Jump meeting. What do you want to know?</p>
              </div>
            </div>
          </div>
          
          <!-- Dynamic messages will be inserted here -->
          <% if @current_chat&.messages&.any? %>
            <% @current_chat.messages.ordered.each do |message| %>
              <div class="flex items-start space-x-3 <%= 'flex-row-reverse space-x-reverse' if message.role == 'user' %>">
                <div class="flex-shrink-0">
                  <% if message.role == 'user' %>
                    <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="flex-1">
                  <div class="<%= message.role == 'user' ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-900' %> rounded-lg p-4">
                    <p><%= simple_format(message.content) %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        
        <!-- Input Area -->
        <div class="p-6 border-t border-gray-200 bg-white">
          <form id="chat-form" class="space-y-4">
            <div class="relative">
              <textarea 
                id="message-input" 
                name="content"
                placeholder="Ask anything about your meetings..."
                class="w-full p-4 pr-20 border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                rows="3"
              ></textarea>
              <div class="absolute bottom-4 right-4 flex items-center space-x-2">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white p-2 rounded-lg transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Mobile Layout (sm and below) -->
    <div class="md:hidden w-full h-full">
      <!-- Mobile History Panel (hidden by default, shown when History tab active) -->
      <div id="mobile-history-panel" class="hidden w-full h-full bg-white overflow-y-auto">
        <div class="p-4">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Chat History</h2>
            <div class="flex items-center gap-2">
              <%= link_to google_path, class: "flex items-center gap-1 px-2 py-1 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded text-sm" do %>
                <svg class="w-3 h-3" viewBox="0 0 24 24">
                  <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                Google
              <% end %>
              <%= link_to hubspot_path, class: "flex items-center gap-1 px-2 py-1 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded text-sm" do %>
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                HubSpot
              <% end %>
              <button id="mobile-new-thread-btn" class="flex items-center gap-2 px-3 py-1 bg-blue-500 hover:bg-blue-600 text-white rounded-lg text-sm">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                New
              </button>
            </div>
          </div>
          
          <div class="flex-1 space-y-2 overflow-y-auto">
            <% @chats.each do |chat| %>
              <div class="mobile-chat-item p-3 rounded-lg hover:bg-gray-50 cursor-pointer border" data-chat-id="<%= chat.id %>">
                <div class="text-sm font-medium text-gray-900 truncate"><%= chat.title %></div>
                <div class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(chat.updated_at) %> ago</div>
              </div>
            <% end %>
          </div>
          
          <!-- Mobile User Info & Sign Out -->
          <div class="border-t border-gray-200 p-4 bg-gray-50 mt-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-medium">
                    <%= Current.user.first_name&.first&.upcase || Current.user.email_address&.first&.upcase %>
                  </span>
                </div>
                <div class="min-w-0 flex-1">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    <%= [Current.user.first_name, Current.user.last_name].compact.join(' ').presence || 'User' %>
                  </p>
                  <p class="text-xs text-gray-500 truncate">
                    <%= Current.user.email_address %>
                  </p>
                </div>
              </div>
              <%= button_to session_path, method: :delete, class: "inline-flex items-center px-2 py-1 text-xs text-gray-600 hover:text-gray-900 transition-colors cursor-pointer", title: "Sign out" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Mobile Main Chat Area -->
      <div id="chat-panel" class="w-full h-full flex flex-col">
        <!-- Context Bar -->
        <div class="p-4 border-b border-gray-200 bg-white">
          <div class="text-center">
            <div class="text-sm text-gray-500">Context set to all meetings</div>
            <div class="text-xs text-gray-400"><%= Time.current.strftime("%l:%M%P - %B %d, %Y") %></div>
          </div>
        </div>
        
        <!-- Messages Area -->
        <div class="flex-1 overflow-y-auto p-4 space-y-4 messages-container">
          <!-- Initial AI Message -->
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
            </div>
            <div class="flex-1">
              <div class="bg-gray-100 rounded-lg p-4">
                <p class="text-gray-900">I can answer questions about any Jump meeting. What do you want to know?</p>
              </div>
            </div>
          </div>
          
          <!-- Dynamic messages will be inserted here -->
          <% if @current_chat&.messages&.any? %>
            <% @current_chat.messages.ordered.each do |message| %>
              <div class="flex items-start space-x-3 <%= 'flex-row-reverse space-x-reverse' if message.role == 'user' %>">
                <div class="flex-shrink-0">
                  <% if message.role == 'user' %>
                    <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div class="flex-1">
                  <div class="<%= message.role == 'user' ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-900' %> rounded-lg p-4">
                    <p><%= simple_format(message.content) %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        
        <!-- Mobile Input Area -->
        <div class="p-4 border-t border-gray-200 bg-white">
          <form id="mobile-chat-form" class="space-y-3">
            <div class="relative">
              <textarea 
                id="mobile-message-input" 
                name="content"
                placeholder="Ask anything about your meetings..."
                class="w-full p-3 pr-16 border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                rows="2"
              ></textarea>
              <div class="absolute bottom-3 right-3">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white p-1.5 rounded-lg transition-colors">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<input type="hidden" id="current-chat-id" value="<%= @current_chat&.id %>">
